<%- include('../partials/header');%>
<%- include('../partials/navbar');%>

<body>

    <h1>Flights</h1>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Flight Number</th>
                <th>Departures</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(f) { %>
            <tr>
                <td><%= f.airline %></td>
                <td><%= f.flightNo %></td>
                <td><%= f.departs %></td>
                <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</body>

</html>